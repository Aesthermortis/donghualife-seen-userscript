{
  "name": "donghualife-seen-userscript",
  "version": "3.2.0",
  "description": "UserScript to track watched episodes on donghualife.com",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs --fix",
    "format": "prettier --write .",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --reporters=default",
    "release": "semantic-release",
    "prepare": "husky",
    "audit": "npm audit fix"
  },
  "lint-staged": {
    "**/*.{js,cjs,mjs,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0 --report-unused-disable-directives --no-warn-ignored"
    ],
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "core-js": "^3.45.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "fake-indexeddb": "^6.2.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "rollup": "^4.52.2",
    "semantic-release": "^24.2.9"
  }
}
